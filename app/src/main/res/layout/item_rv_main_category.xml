<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DashboardActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FF3D00"
        android:layout_margin="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/img_dish"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-5dp"
                android:src="@drawable/burger"/>


            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:maxEms="10"
                android:maxLines="2"
                android:fontFamily="@font/gilroy_bold"
                android:padding="10dp"/>
        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FF3D00"
        android:layout_marginLeft="90dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/Dasd"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/chinese"/>


            <TextView
                android:id="@+id/asdsa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chinese"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:maxEms="10"
                android:maxLines="2"
                android:fontFamily="@font/gilroy_bold"
                android:padding="10dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FF3D00"
        android:layout_marginLeft="180dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/food3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-2dp"
                android:src="@drawable/seafood"/>


            <TextView
                android:id="@+id/food33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sea Food"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:maxEms="10"
                android:maxLines="2"
                android:fontFamily="@font/gilroy_bold"
                android:padding="10dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FF3D00"
        android:layout_marginLeft="270dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/food4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/dessert"/>


            <TextView
                android:id="@+id/food44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/gilroy_bold"
                android:maxEms="10"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Dessert"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FF3D00"
        android:layout_marginLeft="360dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/food5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/pizza"/>


            <TextView
                android:id="@+id/food55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:maxEms="10"
                android:maxLines="2"
                android:fontFamily="@font/gilroy_bold"
                android:padding="10dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FF3D00"
        android:layout_marginLeft="450dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/food6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-4dp"
                android:src="@drawable/barbecue"/>


            <TextView
                android:id="@+id/food66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barbecue"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:maxEms="10"
                android:maxLines="2"
                android:fontFamily="@font/gilroy_bold"
                android:padding="10dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>