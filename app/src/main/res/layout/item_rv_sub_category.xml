<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DashboardActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_dish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/chicken" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Fried Chicken Wings"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:fontFamily="@font/gilroy_light"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="430dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_dish2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/noodles" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginLeft="430dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_dish_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Noodles With Chicken"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:fontFamily="@font/gilroy_light"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_dish3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/margherita" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginLeft="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_dish_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza Margherita"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:fontFamily="@font/gilroy_light"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="430dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_dish5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/noodles" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="640dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_dish4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/cake" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginLeft="640dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_dish_name4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Strawberry Cake"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:fontFamily="@font/gilroy_light"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="850dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_dish6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/salmon" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginLeft="850dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_dish_name6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Pan-Seared Salmon"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:fontFamily="@font/gilroy_light"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="250dp">

        <androidx.cardview.widget.CardView
            android:layout_width="325dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_dish7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/special" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="325dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_dish8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/special2" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
